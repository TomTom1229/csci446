.depot_form
    - if notice
        .alert
            %button.close{"data-dismiss" => "alert", :type => "button"} &times;
            = notice
    
    = form_tag do
        %fieldset
            %legend 
                Please Log In
            .field
                = label_tag :name, "Name:"
                = text_field_tag :name
            .field
                = label_tag :password, "Password:"
                = password_field_tag :password, params[:password]
            .field
                = submit_tag "Login"
        
