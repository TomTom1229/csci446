<h1>Listing products</h1>

<%= link_to 'New Product', new_product_path, :class => "btn"%>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.image_url %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= link_to 'Show', product, :class => "btn" %></td>
      <td><%= link_to 'Edit', edit_product_path(product), :class => "btn" %></td>
      <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-inverse" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br />
