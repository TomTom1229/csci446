<p id="notice"><%= notice %></p>
<h2>Your Cart</h2>
<ul class="nav nav-tabs nav-stacked">
  <% @cart.line_items.each do |item| %>
    <div>
        <span class="badge"><%= item.quantity %></span>
        <%= link_to item.product.title, item.product, :class => "btn" %>
    </div>
  <% end %>
</ul>
<div class="btn-group">
<%= link_to 'Edit', edit_cart_path(@cart), :class => "btn" %> |
<%= link_to 'Back', carts_path, :class => "btn" %>
</div>